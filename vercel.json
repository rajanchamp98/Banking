{
    "builds": [
    {
      "src": "app.js",  
      "use": "@vercel/node"
    },
    {
      "src": "./build/**",    
      "use": "@vercel/static"
    }
  ],



  "rewrites": [
    {
    "source":"/",
    "destination":"./build/index.html"
    },
    {
      "source": "/(.*)",
      "destination": "./app.js"
    }
  ]
}