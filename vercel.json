{
  "version": 2,
  "builds": [
    {
      "src": "app.js", 
      "use": "@vercel/node"
    },
    {
      "src": "./build",    
      "use": "@vercel/static"
    }
  ],

  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "app.js"
    },
    {
      "source": "/",
      "destination": "./build/index.html"
    }
  ]
}